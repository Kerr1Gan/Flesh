<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CCImageStatusBarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/CCColorDark</item>
        <item name="android:colorAccent" tools:targetApi="lollipop">@color/CCColorPrimary</item>
        <item name="colorPrimary">@color/CCColorPrimary</item>
        <item name="colorPrimaryDark">@color/CCColorPrimaryDark</item>
        <item name="colorAccent">@color/CCColorAccent</item>
        <item name="drawerArrowStyle">@style/CCAppTheme.DrawerArrowToggle</item>
    </style>

    <style name="CCAppTheme.DrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="CCAppPreferenceTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/CCColorPrimary</item>
        <item name="colorPrimaryDark">@color/CCColorPrimary</item>
        <item name="colorAccent">@color/CCColorAccent</item>
        <item name="drawerArrowStyle">@style/CCAppTheme.DrawerArrowToggle</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionBarTheme">@style/CCWhiteToolbar</item>
        <item name="toolbarStyle">@style/CCNoSpaceNavigationToolbar</item>

        <item name="android:actionModeBackground">@color/CCColorPrimary</item>
    </style>

    <style name="CCWhiteToolbar" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>

        <item name="titleTextColor">@android:color/white</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
    </style>

    <style name="CCNoSpaceNavigationToolbar" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
</resources>